package cn.ucai.day28;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.zip.ZipOutputStream;

/**
 * 1、字节流
 * 2、跟文件打交道，用文件输入输出流
 * 
 * 基本流如果不能完成指定任务，就考虑包装。
 */
public class TestZip {
	public static void main(String[] args) {
		File fileSrc = new File("E:/abc/TestInteger.java");
		File fileDest = new File("E:/abc/TestInteger2.java");
		FileInputStream fis = null;
		FileOutputStream fos = null;
		ZipOutputStream zos = null;
		try {
			fis = new FileInputStream(fileSrc);
			zos = new ZipOutputStream(FileOutputStream(fileDest));
			int b = 0;
			byte[] byArr = new byte[1024*4];
			while((b=fis.read(byArr))!=-1){
				fos.write(byArr, 0, b);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} finally{
			try {
				if(fis!=null){
					fis.close();
				}
				if(fos!=null){
					fos.close();
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
}

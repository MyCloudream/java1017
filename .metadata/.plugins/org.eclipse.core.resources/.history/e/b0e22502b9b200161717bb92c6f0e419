package cn.ucai.day30.linkedlist;

public class TestPerson {
	public static void main(String[] args) {
		Person p = new Person("张三",60);
		Person h = p;
		
		p.setChild(new Person("张小三",35));
		p = p.getChild();
		
		p.setChild(new Person("张小小三",5));
		p = p.getChild();
		
		p = h;
		
		System.out.println(p.getChild().getChild().getName());

